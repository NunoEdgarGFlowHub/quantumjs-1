{
  "private": true,
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:quantum-api": "cd quantum-api && npm run lint",
    "lint:quantum-code-highlight": "cd quantum-code-highlight && npm run lint",
    "lint:quantum-diagram": "cd quantum-diagram && npm run lint",
    "lint:quantum-docs": "cd quantum-docs && npm run lint",
    "lint:quantum-dom": "cd quantum-dom && npm run lint",
    "lint:quantum-html": "cd quantum-html && npm run lint",
    "lint:quantum-core": "cd quantum-core && npm run lint",
    "lint:quantum-markdown": "cd quantum-markdown && npm run lint",
    "lint:quantum-template": "cd quantum-template && npm run lint",
    "lint:quantum-version": "cd quantum-version && npm run lint",
    "clean-coverage": "rm -rf */coverage",
    "combine-coverage": "node scripts/combine-coverage */coverage/coverage.json",
    "combined-test": "npm run clean-coverage && ./node_modules/istanbul/lib/cli.js cover -x */lib/cli.js --dir coverage ./node_modules/mocha/bin/_mocha -- --ui bdd -R spec test/index.spec.js && node scripts/combine-coverage coverage/coverage.json",
    "test": "npm run clean-coverage && npm-run-all test:* && npm run combine-coverage",
    "test:quantum-api": "cd quantum-api && npm test",
    "test:quantum-code-highlight": "cd quantum-code-highlight && npm test",
    "test:quantum-diagram": "cd quantum-diagram && npm test",
    "test:quantum-docs": "cd quantum-docs && npm test",
    "test:quantum-dom": "cd quantum-dom && npm test",
    "test:quantum-html": "cd quantum-html && npm test",
    "test:quantum-core": "cd quantum-core && npm test",
    "test:quantum-markdown": "cd quantum-markdown && npm test",
    "test:quantum-template": "cd quantum-template && npm test",
    "test:quantum-version": "cd quantum-version && npm test",
    "postinstall": "npm-run-all install-all:*",
    "install-all:quantum-api": "cd quantum-api && npm install",
    "install-all:quantum-code-highlight": "cd quantum-code-highlight && npm install",
    "install-all:quantum-diagram": "cd quantum-diagram && npm install",
    "install-all:quantum-docs": "cd quantum-docs && npm install",
    "install-all:quantum-dom": "cd quantum-dom && npm install",
    "install-all:quantum-html": "cd quantum-html && npm install",
    "install-all:quantum-core": "cd quantum-core && npm install",
    "install-all:quantum-markdown": "cd quantum-markdown && npm install",
    "install-all:quantum-template": "cd quantum-template && npm install",
    "install-all:quantum-version": "cd quantum-version && npm install",
    "clean": "rm -rf coverage target node_modules */coverage */target */node_modules",
    "link-all": "./scripts/link",
    "unlink-all": "./scripts/unlink"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^3.1.0",
    "istanbul": "^0.4.5",
    "istanbul-combine": "^0.3.0",
    "mocha": "^5.0.2",
    "npm-run-all": "^4.0.0"
  }
}
