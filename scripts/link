#! /bin/bash

# This script is useful for developing locally - it will npm link all the modules

pushd quantum-js
sudo npm link
popd

pushd quantum-dom
sudo npm link
popd

pushd quantum-template
npm link quantum-js
sudo npm link
popd

pushd quantum-html
npm link quantum-js quantum-dom
sudo npm link
popd

pushd quantum-api
npm link quantum-js quantum-html
sudo npm link
popd

pushd quantum-changelog
npm link quantum-js quantum-html
sudo npm link
popd

pushd quantum-diagram
npm link quantum-js
sudo npm link
popd

pushd quantum-docs
npm link quantum-js quantum-html
sudo npm link
popd

pushd quantum-version
npm link quantum-js
sudo npm link
popd

pushd quantum-watch
npm link quantum-js
sudo npm link
popd

pushd quantum-hub
npm link quantum-js quantum-watch
sudo npm link
popd

pushd docs
npm link quantum-hub quantum-html quantum-template quantum-api quantum-changelog quantum-diagram quantum-docs quantum-version
popd